<%= form_for(@blogger) do |f| %>
    <% if @blogger.errors.any? %>
      <div id="error_explanation">
        <h2>There were some errors:</h2>
  
        <ul>
          <% @blogger.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.label :name %><br>
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label :bio %><br>
      <%= f.text_area :bio %>
    </div>
    <div class="field">
      <%= f.label :age %><br>
      <%= f.number_field :age %>
    </div>
    <div>
        <%= f.submit "Submit Blogger" %>
    </div>
<% end %>

