<h2>Create a new blogger</h2>

<%if flash[:errors] %>
    <% flash[:errors].each do |error| %>
    <%= error %>
    <% end %>
<% end %>

<%= form_for @blogger do |f| %>
<%= f.label :name %>
<%= f.text_field :name %><br>
<%= f.label :bio %>
<%= f.text_area :bio %><br>
<%= f.label :age %>
<%= f.number_field :age %> <br>
<br>
<%= f.submit "Create a blogger"%>
<% end %>


