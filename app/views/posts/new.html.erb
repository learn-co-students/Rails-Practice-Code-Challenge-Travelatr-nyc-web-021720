<h2>Create a new Post!</h2>

<%if flash[:errors] %>
    <% flash[:errors].each do |error| %>
   		<%= error %>
    <% end %>
<% end %>

<%= form_for @post do |f| %>
	<%= f.label :title %> <br>
		<%= f.text_field :title %><br>
	<%= f.label :content %> <br>
		<%= f.text_area :content %><br>
	<%= f.label :blogger %> <br>
		<%= f.collection_select :blogger_id, Blogger.order(:name),:id,:name %> <br>
	<br>
	<%= f.label :destination %> <br>
		<%= f.collection_select :destination_id, Destination.order(:name),:id,:name %> <br>
	<br>
	<%= f.submit "Create a Post"%>
<% end %>